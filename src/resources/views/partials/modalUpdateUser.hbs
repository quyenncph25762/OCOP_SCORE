<script>
    async function handleUpdateUser(idUser) {
        if (idUser) {
            const UserName = document.getElementById(`UserNameUpdate${idUser}`).value
            const FullName = document.getElementById(`FullNameUpdate${idUser}`).value
            const RoleId = document.getElementById(`RoleIdUpdate${idUser}`).value
            const Email = document.getElementById(`EmailUpdate${idUser}`).value
            const Phone = document.getElementById(`PhoneUpdate${idUser}`).value
            const IsActive = document.getElementById(`IsActiveUpdate${idUser}`).checked
            const PasswordOld = document.getElementById(`PasswordOld${idUser}`).value
            const Password = document.getElementById(`PasswordNewUpdate${idUser}`).value
            const ConfirmPassword = document.getElementById(`ConfirmPasswordUpdate${idUser}`).value
            const District = document.getElementById(`District${idUser}`).value
            // người dùng nhập mật khẩu thì mới chạy vào điều kiện này , còn không thì sẽ bỏ qua
            if (errorMessage(Password.length >= 1 && Password.length < 6 || ConfirmPassword.length >= 1 && ConfirmPassword.length < 6, 'Mật khẩu phải từ 6 kí tự')) {
                return
            }
            if (errorMessage(Password !== ConfirmPassword, 'Mật khẩu và mật khẩu xác nhận không khớp!')) {
                return
            }
            if (errorMessage(UserName.trim() === "", "Tên đăng nhập không được để trống")) {
                return
            }
            if (errorMessage(FullName.trim() === "", "Họ và tên không được để trống")) {
                return
            }
            if (errorMessage(RoleId.trim() === "", "Vai trò không được để trống")) {
                return
            }
            const formUser = {
                UserName: UserName,
                FullName: FullName,
                RoleId: Number(RoleId),
                Email: Email,
                IsActive: IsActive === true ? 1 : 0,
                Phone: Phone,
                DistrictId: District || null,
                //nếu password người dùng k nhập , thì sẽ lấy mật khẩu cũ của người dùng
                Password: Password.trim() === "" ? PasswordOld : CryptoJS.SHA256(Password).toString()
            }
            const response = await fetch(`/users/update/${idUser}`, {
                method: "PATCH",
                body: JSON.stringify(formUser),
                headers: {
                    "Content-Type": "application/json"
                }
            })
            if (response.ok) {
                localStorage.setItem('toast', JSON.stringify({
                    position: "top-right",
                    heading: 'SUCCESS',
                    text: 'Cập nhật thành công',
                    icon: 'success',
                    loader: true,
                    loaderBg: '#9EC600',
                    showHideTransition: 'slide',
                    stack: 4
                }));
                window.location.reload()
            } else {
                const data = await response.json()
                $.toast({
                    position: "top-right",
                    heading: 'WARNING!',
                    text: data.message || 'Đã có lỗi xảy ra',
                    icon: 'warning',
                    loader: true,
                    loaderBg: '#f2a654',
                    showHideTransition: 'slide',
                    stack: 4
                });
            }
        }
    }
    function errorMessage(error, message) {
        if (error) {
            $.toast({
                position: "top-right",
                heading: 'Warning',
                text: message,
                icon: 'warning',
                loader: true,
                loaderBg: '#f2a654',
                showHideTransition: 'slide',
                stack: 4
            });
            return true
        }
        return false
    }
</script>