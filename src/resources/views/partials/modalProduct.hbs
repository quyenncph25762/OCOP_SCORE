        /* Màu chữ khi hover */
    }

    .activeTabs {
        background-color: #14b6ff;
        /* Màu nền khi hover */
        color: white;
        /* Màu chữ khi hover */
    }

    .displayNone {
        display: none;
    }

    .table-border td {
        max-height: 80px;
    }

    .row-content {
        height: 70vh;
        padding: 24px 0;
    }



    .file-drop-area {
        position: relative;
        display: flex;
        align-items: center;
