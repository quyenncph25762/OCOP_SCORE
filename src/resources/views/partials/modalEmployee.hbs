<script>
    document.addEventListener("DOMContentLoaded", () => {
        const avatarImage = document.getElementById("AvatarPreview");
        const defaultImageUrl = avatarImage.src;
        const radioNu = document.getElementById("nu")
        const radioNam = document.getElementById("nam")
        radioNu.addEventListener("click", (e) => {
            avatarImage.src = "/Uploads/user_girl.png"
        })
        radioNam.addEventListener("click", (e) => {
            avatarImage.src = "/Uploads/user_boy.jpg"
        })
        document.getElementById("Avatar").addEventListener("change", (event) => {
            const file = event.target.files[0]
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    avatarImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        })
        window.removeUpload = () => {
            const fileInput = document.getElementById('Avatar');
            fileInput.value = ''; // Xóa nội dung của input file
            avatarImage.src = defaultImageUrl; // Đặt lại hình ảnh mặc định
        };
    })
</script>
