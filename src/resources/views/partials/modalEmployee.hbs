            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                <button type="button" onclick="handleUpdate('{{this._id}}')" class="btn btn-warning">Sửa cán
                    bộ</button>
            </div>
        </div>
    </div>
