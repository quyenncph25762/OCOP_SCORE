<script>
    async function handleAdd(DistrictId) {
        const Avatar = document.getElementById("Avatar")
        const nu = document.getElementById("nu").checked
        const nam = document.getElementById("nam").checked
        const Code = document.getElementById("Code").value
        const UserName = document.getElementById("UserName").value
        const Email = document.getElementById("Email").value
        const FullName = document.getElementById("FullName").value
        const DoB = document.getElementById("DoB").value
        const Phone = document.getElementById("Phone").value
        const Address = document.getElementById("Address").value
        const WorkDepartment_id = document.getElementById("WorkDepartment_id").value
        const WorkPosition_id = document.getElementById("WorkPosition_id").value
        const roleId = document.getElementById("roleId")?.value
        const CreatorUser_id = document.getElementById("CreatorUser_id").value
        const District = document.getElementById("District")?.value
        if (errorMessage(FullName.trim() === "", "Tên cán bộ không được để trống")) {
            return
        }
        if (errorMessage(WorkDepartment_id.trim() === "", "Phòng ban không được để trống")) {
            return
        }
        if (errorMessage(WorkPosition_id.trim() === "", "Vị trí chức danh không được để trống")) {
            return
        }
        if (errorMessage(UserName.trim() === "", "Tên cán bộ không được để trống")) {
            return
        } else if (errorMessage(UserName.length < 6, "Tên đăng nhập phải lớn hơn hoặc bằng 6")) {
            return
        }
        const formData = new FormData()
        formData.append("Avatar", Avatar?.files[0] ? Avatar?.files[0] : null)
        formData.append("Gender", nu === true ? "nu" : "nam")
        formData.append("Code", Code)
        formData.append("UserName", UserName)
        formData.append("Email", Email)
        formData.append("DoB", DoB)
        formData.append("FullName", FullName)
        formData.append("Phone", Phone)
        formData.append("Address", Address)
        formData.append("WorkDepartment_id", WorkDepartment_id)
        formData.append("WorkPosition_id", WorkPosition_id)
        formData.append("roleId", roleId)
        formData.append("CreatorUser_id", CreatorUser_id)
        formData.append("DistrictId", District ? Number(District) : Number(DistrictId))
        formData.append("Password", CryptoJS.SHA256("123456"))
        const res = await fetch(`/employee/add`, {
            method: "POST",
            body: formData
        })
        if (res.ok) {
            const data = await res.json()
            localStorage.setItem('toast', JSON.stringify({
                position: "top-right",
                heading: 'SUCCESS',
                text: 'Thêm thành viên thành công',
                icon: 'success',
                loader: true,
                loaderBg: '#9EC600',
                showHideTransition: 'slide',
                stack: 4
            }));
            window.location.replace("/employee")
        } else {
            const data = await res.json()
            $.toast({
                position: "top-right",
                heading: 'WARNING!',
                text: data.message,
                icon: 'warning',
                loader: true,
                loaderBg: '#f2a654',
                showHideTransition: 'slide',
                stack: 4
            });
        }
    }
    function errorMessage(error, message) {
        if (error) {
            $.toast({
                position: "top-right",
                heading: 'WARNING!',
                text: message,
                icon: 'warning',
                loader: true,
                loaderBg: '#f2a654',
                showHideTransition: 'slide',
                stack: 4
            });
            return true;
        }
        return false;
    }
</script>
