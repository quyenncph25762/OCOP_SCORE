{{> header}}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row" style="max-width: 100%; display: contents;">
            <ul class="search-customer"
                style="list-style: none; display:flex; justify-content: space-between; align-items: center;padding: 0;">
                <p style="font-size: 18px;font-weight: 600">Chấm điểm OCOP | Tên sản phẩm</p>
                <div class="import_customer_button"
                    style="list-style: none; display:flex; justify-content: space-between; align-items: center;">
                    <button class="btn btn-info" onclick="handleAddScoreFile()">Chấm điểm</button>
                </div>
            </ul>
            </li>
            </ul>
        </div>
    </div>
    <div class="col-md-12">
        <div class="row row-content">
            <div class="col-sm-3">
                {{#if scoreCommitteeDetail.SecUserId}}
                <div class="card shadow">
                    <div class="card-body d-flex">
                        <p style="font-size: 14px;font-weight: 600">Thư kí: {{scoreCommitteeDetail.secUser_FullName}}
                        </p>
                        {{#if scorefileId}}
                        {{#ifCondOr scorefileId.Status 0 scorefileId.Status 1}}
                        Hiện chưa chấm
                        {{else}}
                        <span class="d-inline-block ml-3" tabindex="0" data-toggle="tooltip"
                            title="Tham khảo phiếu chấm">
                            <a
                                href="/scoreFile/reviewPage?productId={{productId}}&ScoreFile_id={{scorefileId._id}}&scorecommitee={{scorefileId.ScoreCommitee_id}}">
                                <ion-icon name="documents-outline"></ion-icon>
                            </a>
                        </span>
                        {{/ifCondOr}}
                        {{else}}
                        <span class="d-inline-block ml-3" tabindex="0" data-toggle="tooltip" title="Đang chấm">
                            <ion-icon style="cursor: wait;" name="documents-outline"></ion-icon>
                        </span>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                <div class="card shadow">
                    {{!-- product --}}
                    <div class="card-body" id="product-container">
                        <div class="">
                            <input type="hidden" value="{{Product._id}}" id="Product_id">
                            <input type="hidden" id="Customer_id" value="{{Product.Customer_id}}">
                            <img name="Avatar" style="width: 100%;height: 150px;" src="{{Product.Avatar}}" alt="">
                        </div>
                        <p name="Name" class="title-scoreTempDetail text-black-custom" style="font-size:16px">
                            {{Product.Name}}</p>
                        <div class="my-4" style="border-top: 1px dashed #ccc;"></div>
                        <div class="" style="font-size: 16px;">
                            <div class="d-flex justify-content-between">
                                <p style="font-size: 12px;min-width: 75px">Chủ thể:</p>
                                <p class="text-muted"
                                    style="font-weight: 600;font-size: 12px;opacity: 0.7;text-transform: uppercase">
                                    {{Product.customer_name}}</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p style="font-size: 12px;min-width: 75px">Nhóm sản phẩm:</p>
                                <p class="text-muted" style="font-weight: 600;font-size: 13px;opacity: 0.7">
                                    {{Product.productGroup_name}}</p>
                            </div>
                        </div>
                        {{!-- Phần A --}}
                        <div class="" style="border-top: 1px dashed #ccc;padding: 20px 0;font-weight: 600;">
                            <div class="d-flex align-items-center justify-content-between box-partA">
                                <p> Phần A:</p>
                                <div class="d-flex" style="color: rgb(48, 190, 150);">
                                    <p class="partA"></p>/
                                    <p class="totalPartA"></p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between box-partB">
                                <p> Phần B:</p>
                                <div class="d-flex" style="color: rgb(48, 190, 150)">
                                    <p class="partB"></p>/
                                    <p class="totalPartB"></p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between box-partC">
                                <p> Phần C:</p>
                                <div class="d-flex" style="color: rgb(48, 190, 150)">
                                    <p class="partC"></p>/
                                    <p class="totalPartC"></p>
                                </div>
                            </div>
                            {{!-- <div class="d-flex align-items-center justify-content-between box-partD">
                                <p> Phần D:</p>
                                <div class="d-flex" style="color: rgb(24, 93, 170)">
                                    <p class="partD"></p>/
                                    <p class="totalPartD"></p>
                                </div>
                            </div> --}}
                            <div class="d-flex align-items-center justify-content-between">
                                <p> Tổng điểm:</p>
                                <div class="d-flex" style="color: rgb(232, 67, 67)">
                                    <p class="TotalAfter"></p>/
                                    <p class="TotalBefore"></p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <p> Xếp hạng OCOP:</p>
                                <p class="startOcop text-hightlight">
                                    {{!-- <ion-icon name="star"></ion-icon> --}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9 list_citationUpdate" style="overflow-y: auto;height: 100vh;font-size: 12px;">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <table class="table table-bordered table-striped table-hover table-scoreTemp">
                                <thead class="sticky-top"
                                    style="backdrop-filter: blur(5px);background-color: transparent;">
                                    <tr>
                                        <th scope="col">
                                        </th>
                                        <th scope="col">
                                            Số điểm
                                        </th>
                                        <th scope="col" style="max-width:80px;">
                                            <p style="word-break: break;" class="mb-0">File</p>
                                        </th>
                                        <th scope="col">
                                            Chọn
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyScoreFile">

                                </tbody>
                            </table>
                            <input type="hidden" class="Code" value="">
                            <input type="hidden" id="CreatorUser_id" value="{{User._id}}">
                            <p
                                style="margin-top: 10px;border-bottom: 1px solid #B5B5C3;padding-bottom: 5px;width: 250px;">
                                Ý kiến của người đánh giá</p>
                            <textarea name="" id="Note"
                                style="width: 100%;background-color: #fff;padding: 12px;color: #000;"></textarea>
                            <div class="import_customer_button mt-3"
                                style="list-style: none; display:flex; justify-content: end; align-items: center;">
                                <button class="btn btn-info" onclick="handleUpdate()">Cập nhật phiếu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> modalProductDetail}}
    </div>

</div><!--End content-wrapper-->
{{> footer}}

